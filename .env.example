# ===== DATABASE CONFIGURATION =====
# PostgreSQL connection string (required)
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/gharse"

# Prisma Accelerate (optional - for connection pooling)
# DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# ===== AUTHENTICATION =====
# JWT secret for customer authentication (change in production)
JWT_SECRET="***REMOVED***"

# JWT secret for admin authentication (change in production)
ADMIN_JWT_SECRET="***REMOVED***"

# Customer JWT secret (separate from admin)
CUSTOMER_JWT_SECRET="***REMOVED***"

# NextAuth configuration
NEXTAUTH_SECRET="***REMOVED***"
NEXTAUTH_URL="http://localhost:3000"

# ===== AI CHAT SYSTEM =====
# OpenAI API key (required for AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4o"

# Chat Configuration
CHAT_MAX_HISTORY=20
CHAT_TEMPERATURE=0.9
CHAT_MAX_TOKENS=150

# ===== IMAGE UPLOAD & STORAGE =====
# Cloudinary credentials (optional - for cloud image storage)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===== EMAIL CONFIGURATION =====
# Email provider (smtp, sendgrid, ses)
EMAIL_PROVIDER=smtp
EMAIL_FROM="GharSe <noreply@example.com>"

# SMTP Configuration (Generic example - replace with your provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password-here

# Alternative: Gmail SMTP (requires App Password with 2FA)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-16-character-app-password

# ===== PAYMENT GATEWAY =====
# Stripe API keys (get from https://stripe.com/docs/keys)
STRIPE_PUBLIC_KEY="pk_test_51xxxxxxxxxxxxxxxxxxxxx"
STRIPE_SECRET_KEY="sk_test_51xxxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx"

# ===== SMS NOTIFICATIONS (OPTIONAL) =====
# Twilio credentials (optional - for SMS notifications)
# Get free trial credits at https://www.twilio.com
# TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token-here"
# TWILIO_PHONE_NUMBER="+15555555555"

# ===== APPLICATION SETTINGS =====
# Environment (development, production)
NODE_ENV="development"

# Application port
PORT="3000"

# App URLs (used in emails and redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# ===== ADMIN CONFIGURATION =====
# Default admin credentials (CHANGE IMMEDIATELY after first login)
ADMIN_DEFAULT_EMAIL="admin@example.com"
ADMIN_DEFAULT_PASSWORD="***REMOVED***"

# ===== SECURITY =====
# Rate limiting (requests per minute per IP)
RATE_LIMIT_MAX=100

# Session expiration (in seconds)
SESSION_EXPIRY=604800

# ===== FEATURE FLAGS =====
# Enable/disable features
ENABLE_AI_CHAT=true
ENABLE_REFERRALS=true
ENABLE_DYNAMIC_PRICING=true
ENABLE_FRAUD_DETECTION=true

# ===== MONITORING & LOGGING =====
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Sentry DSN (optional - for error tracking)
# SENTRY_DSN="https://xxxxxxxx@sentry.io/xxxxxxx"

# ===== ANALYTICS (OPTIONAL) =====
# Google Analytics tracking ID
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# ===== REDIS (OPTIONAL) =====
# Redis connection string (for caching and sessions)
# REDIS_URL="redis://localhost:6379"

# ===== WEBHOOKS =====
# Webhook secret for external integrations
WEBHOOK_SECRET="your-webhook-secret-key-change-this"

# ===== MAP SERVICES (OPTIONAL) =====
# Google Maps API key (for delivery tracking)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# ===== SECURITY NOTES =====
# 1. NEVER commit this file with real credentials
# 2. Use .env for local development (git-ignored)
# 3. Use hosting platform environment variables for production
# 4. Generate strong random secrets (use: openssl rand -base64 32)
# 5. Rotate all secrets regularly (every 90 days minimum)
# 6. Enable 2FA on all third-party services
# 7. Use different credentials for dev/staging/production
# 8. Monitor for exposed credentials with GitGuardian or similar tools
