# ===== DATABASE CONFIGURATION =====
# PostgreSQL connection string (required)
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/gharse"

# Prisma Accelerate (optional - for connection pooling)
# DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# ===== AUTHENTICATION =====
# JWT secret for customer authentication (change in production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT secret for admin authentication (change in production)
ADMIN_JWT_SECRET="admin-super-secret-jwt-key-change-this-in-production"

# Customer JWT secret (separate from admin)
CUSTOMER_JWT_SECRET="customer-super-secret-jwt-key-change-in-production"

# NextAuth configuration
NEXTAUTH_SECRET="your-nextauth-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# ===== AI CHAT SYSTEM =====
# OpenAI API key (required for AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4o"

# Chat Configuration
CHAT_MAX_HISTORY=20
CHAT_TEMPERATURE=0.9
CHAT_MAX_TOKENS=150

# ===== IMAGE UPLOAD & STORAGE =====
# Cloudinary credentials (optional - for cloud image storage)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===== EMAIL CONFIGURATION =====
# Email provider (smtp, sendgrid, ses)
EMAIL_PROVIDER=smtp
EMAIL_FROM="GharSe <noreply@gharse.com>"

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===== PAYMENT GATEWAY =====
# Stripe API keys (get from https://stripe.com/docs/keys)
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# ===== SMS NOTIFICATIONS (OPTIONAL) =====
# Twilio credentials (optional - for SMS notifications)
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# ===== APPLICATION SETTINGS =====
# Environment (development, production)
NODE_ENV="development"

# Application port
PORT="3000"

# App URLs (used in emails and redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# ===== ADMIN CONFIGURATION =====
# Default admin credentials (change after first login)
ADMIN_DEFAULT_EMAIL="admin@gharse.com"
ADMIN_DEFAULT_PASSWORD="ChangeThisPassword123!"

# ===== SECURITY =====
# Rate limiting (requests per minute per IP)
RATE_LIMIT_MAX=100

# Session expiration (in seconds)
SESSION_EXPIRY=604800

# ===== FEATURE FLAGS =====
# Enable/disable features
ENABLE_AI_CHAT=true
ENABLE_REFERRALS=true
ENABLE_DYNAMIC_PRICING=true
ENABLE_FRAUD_DETECTION=true

# ===== MONITORING & LOGGING =====
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Sentry DSN (optional - for error tracking)
# SENTRY_DSN="https://your-sentry-dsn"

# ===== ANALYTICS (OPTIONAL) =====
# Google Analytics tracking ID
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# ===== REDIS (OPTIONAL) =====
# Redis connection string (for caching and sessions)
# REDIS_URL="redis://localhost:6379"

# ===== WEBHOOKS =====
# Webhook secret for external integrations
WEBHOOK_SECRET="your-webhook-secret-key"

# ===== MAP SERVICES (OPTIONAL) =====
# Google Maps API key (for delivery tracking)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ===== NOTES =====
# 1. Never commit this file with real credentials
# 2. Generate strong random secrets for production
# 3. Use environment variables in production (Vercel, AWS, etc.)
# 4. Rotate secrets regularly
# 5. Keep this file updated when adding new env variables
