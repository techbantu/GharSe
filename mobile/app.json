{
  "expo": {
    "name": "GharSe",
    "slug": "gharse-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#DC2626"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gharse.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby restaurants and for delivery.",
        "NSLocationAlwaysUsageDescription": "We need your location to track delivery in real-time."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#DC2626"
      },
      "package": "com.gharse.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-location",
      "expo-notifications"
    ],
    "extra": {
      "apiUrl": "https://gharse.app",
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
